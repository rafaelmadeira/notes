<p style="color: green"><%= notice %></p>

<p>
  <%= link_to "Back to notes", notes_path %>
</p>

<div class="note-detail">
  <%= render @note, show_view: true %>

  <% if @referencing_notes.any? %>
    <div class="referencing-notes">
      <h2>Referenced by</h2>
      <%= render partial: "note", 
                 collection: @referencing_notes, 
                 locals: { current_note_id: @note.id } %>
    </div>
  <% end %>
</div>
